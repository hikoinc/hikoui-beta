{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"]
    },
    "clean": {
      "dependsOn": ["^clean"]
    },
    "storybook": {
      "dependsOn": ["^storybook"]
    },
    "typescheck": {
      "dependsOn": ["^typescheck"]
    },
    "sort-package-json": {
      "dependsOn": ["^sort-package-json"]
    },
    "sort-package-json:check": {
      "dependsOn": ["^sort-package-json:check"]
    }
  }
}
