{
  "name": "hikoui",
  "version": "1.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hikoinc/hikoui.git"
  },
  "license": "MIT",
  "author": "Joe Takara (https://github.com/joetakara)",
  "scripts": {
    "build": "turbo run build",
    "build:packages": "turbo run build --filter=packages/**",
    "build:storybook": "turbo run build --filter=@hikoui/storybook",
    "changeset": "changeset",
    "changeset:next-enter": "changeset pre enter next",
    "changeset:next-exit": "changeset pre exit next",
    "changeset:release": "changeset publish",
    "changeset:release-next": "changeset publish --tag next",
    "changeset:version": "changeset version",
    "changeset:version-next": "changeset version --snapshot next",
    "clean": "turbo run clean && pnpm clean:lock && pnpm clean:turbo && pnpm clean:coverage && pnpm clean:node-modules && pnpm install --hoist",
    "clean:coverage": "rimraf ./coverage",
    "clean:lock": "rimraf ./pnpm-lock.yaml",
    "clean:node-modules": "rimraf ./node_modules",
    "clean:turbo": "rimraf .turbo",
    "dev": "turbo dev",
    "dev:packages": "turbo run dev --filter=packages/**",
    "dev:storybook": "turbo run dev --filter=@hikoui/storybook",
    "eslint": "eslint . --max-warnings 0",
    "eslint:fix": "eslint . --fix --max-warnings 0",
    "generate:component": "turbo gen react-component",
    "jest": "jest",
    "jest:coverage": "jest --coverage",
    "jest:watch": "jest --watch",
    "prepare": "husky",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "sort-package-json": "pnpm exec sort-package-json && turbo sort-package-json",
    "sort-package-json:check": "pnpm exec sort-package-json --check && turbo sort-package-json:check",
    "test": "pnpm jest",
    "typescheck": "turbo typescheck"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.4",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/types": "^19.8.1",
    "@eslint/compat": "^1.2.9",
    "@eslint/js": "^9.27.0",
    "@stylistic/eslint-plugin": "^3.1.0",
    "@swc/jest": "^0.2.38",
    "@testing-library/jest-dom": "^6.6.3",
    "@turbo/gen": "^2.5.3",
    "@types/jest": "^29.5.14",
    "@types/react": "19.1.0",
    "@types/react-dom": "19.1.1",
    "eslint": "^9.27.0",
    "eslint-config-airbnb-extended": "^1.0.11",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^4.4.1",
    "eslint-plugin-import-x": "^4.13.3",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-sonarjs": "^3.0.2",
    "eslint-plugin-storybook": "^9.0.0",
    "globals": "^16.1.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-watch-typeahead": "^2.2.2",
    "lint-staged": "^16.0.0",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "rimraf": "^6.0.1",
    "sort-package-json": "^3.0.0",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "turbo": "^2.5.3",
    "typescript": "5.8.2",
    "typescript-eslint": "^8.33.0"
  },
  "packageManager": "pnpm@10.11.0",
  "engines": {
    "node": ">=20"
  }
}
