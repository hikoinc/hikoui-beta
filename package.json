{
  "name": "hikoui",
  "version": "1.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hikoinc/hikoui.git"
  },
  "license": "MIT",
  "author": "Joe Takara <anuchit.boonsom@gmail.com>",
  "type": "module",
  "scripts": {
    "build": "turbo build",
    "changeset": "changeset",
    "changeset:next-enter": "changeset pre enter next",
    "changeset:next-exit": "changeset pre exit next",
    "changeset:release": "changeset publish",
    "changeset:release-dev": "changeset publish --tag dev",
    "changeset:version": "changeset version",
    "changeset:version-dev": "changeset version --snapshot dev",
    "clean": "pnpm clean:turbo && pnpm clean:lock && pnpm clean:node-modules && pnpm install --hoist",
    "clean:changelogs": "rimraf ./packages/**/**/CHANGELOG.md",
    "clean:lock": "rimraf ./pnpm-lock.yaml",
    "clean:node-modules": "rimraf ./apps/**/node_modules && rimraf ./packages/**/**/node_modules && rimraf ./node_modules",
    "clean:turbo": "turbo clean && rimraf ./node_modules/.cache/turbo",
    "dev": "turbo dev",
    "eslint": "eslint . && turbo eslint",
    "eslint:fix": "eslint . --fix && true && turbo eslint:fix",
    "prepare": "husky install",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "sort-package-json": "pnpm exec sort-package-json && turbo sort-package-json",
    "sort-package-json:check": "pnpm exec sort-package-json --check || true && turbo sort-package-json:check",
    "storybook": "turbo storybook",
    "typescheck": "turbo typescheck"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.4",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/types": "^19.8.1",
    "@eslint/js": "^9.27.0",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^4.3.5",
    "eslint-plugin-import-x": "^4.12.2",
    "eslint-plugin-sonarjs": "^3.0.2",
    "eslint-plugin-turbo": "^2.5.3",
    "husky": "^8.0.0",
    "lint-staged": "^16.0.0",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "rimraf": "^6.0.1",
    "sort-package-json": "^3.0.0",
    "tsup": "^8.5.0",
    "turbo": "^2.5.3",
    "typescript": "5.8.2",
    "typescript-eslint": "^8.32.1"
  },
  "packageManager": "pnpm@10.11.0",
  "engines": {
    "node": ">=20"
  }
}
