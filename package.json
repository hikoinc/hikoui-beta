{
  "name": "hikoui",
  "version": "1.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hikoinc/hikoui.git"
  },
  "license": "MIT",
  "author": "Joe Takara <anuchit.boonsom@gmail.com>",
  "scripts": {
    "build": "pnpm --filter=./packages/* build",
    "build:storybook": "turbo run build --filter=app/storybook",
    "changeset": "changeset",
    "changeset:next-enter": "changeset pre enter next",
    "changeset:next-exit": "changeset pre exit next",
    "changeset:release": "changeset publish",
    "changeset:release-next": "changeset publish --tag next",
    "changeset:version": "changeset version",
    "changeset:version-next": "changeset version --snapshot next",
    "clean": "turbo run clean && pnpm clean:lock && pnpm clean:coverage && pnpm clean:reports && pnpm clean:node-modules && pnpm install --hoist",
    "clean:changelogs": "rimraf ./packages/**/**/CHANGELOG.md",
    "clean:coverage": "rimraf ./coverage",
    "clean:lock": "rimraf ./pnpm-lock.yaml",
    "clean:node-modules": "rimraf ./apps/**/node_modules && rimraf ./packages/**/**/node_modules && rimraf ./node_modules",
    "clean:reports": "rimraf ./reports",
    "clean:turbo": "turbo clean && rimraf ./node_modules/.cache/turbo",
    "dev": "turbo dev",
    "eslint": "eslint . --max-warnings 0",
    "eslint:fix": "eslint . --fix --max-warnings 0",
    "jest": "jest",
    "jest:coverage": "jest --coverage",
    "jest:watch": "jest --watch",
    "prepare": "husky install",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "sort-package-json": "pnpm exec sort-package-json && turbo sort-package-json",
    "sort-package-json:check": "pnpm exec sort-package-json --check && turbo sort-package-json:check",
    "storybook": "turbo storybook",
    "test": "pnpm jest",
    "typescheck": "turbo typescheck"
  },
  "dependencies": {
    "@testing-library/react": "^16.3.0"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.4",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/types": "^19.8.1",
    "@eslint/js": "^9.27.0",
    "@swc/jest": "^0.2.38",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/eslint-plugin-jsx-a11y": "^6.10.0",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^4.3.5",
    "eslint-plugin-import-x": "^4.12.2",
    "eslint-plugin-jsdoc": "^50.6.17",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-sonarjs": "^3.0.2",
    "eslint-plugin-testing-library": "^7.2.1",
    "eslint-plugin-turbo": "^2.5.3",
    "globals": "^16.1.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jest-watch-typeahead": "^2.2.2",
    "lint-staged": "^16.0.0",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "rimraf": "^6.0.1",
    "sort-package-json": "^3.0.0",
    "tsup": "^8.5.0",
    "turbo": "^2.5.3",
    "typescript": "5.8.2",
    "typescript-eslint": "^8.32.1"
  },
  "packageManager": "pnpm@10.11.0",
  "engines": {
    "node": ">=20"
  }
}
