{
  "name": "@hikoui-beta/system",
  "version": "0.0.2",
  "description": "HikoUI is a minimal-design React + Tailwind CSS component system for fast, scalable UI development.",
  "keywords": [
    "system",
    "react",
    "ui",
    "components",
    "tailwindcss",
    "typescript",
    "design",
    "minimal",
    "frontend"
  ],
  "homepage": "https://hikoui.com",
  "bugs": {
    "url": "https://github.com/hikoinc/hikoui/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hikoinc/hikoui.git",
    "directory": "packages/core/system"
  },
  "license": "MIT",
  "author": "Joe Takara <https://github.com/joetakara>",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm clean:build && tsup",
    "clean": "pnpm clean:build && pnpm clean:turbo && pnpm clean:node_modules",
    "clean:build": "rimraf dist",
    "clean:node_modules": "rimraf node_modules",
    "clean:turbo": "rimraf .turbo",
    "dev": "pnpm clean:build && tsup --watch",
    "sort-package-json": "pnpm exec sort-package-json",
    "sort-package-json:check": "pnpm exec sort-package-json --check",
    "typescheck": "tsc --noEmit"
  },
  "dependencies": {
    "html-element-attributes": "^3.4.0",
    "lodash": "^4.17.21",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/lodash": "^4.17.17",
    "@types/react": "19.1.0",
    "@types/react-dom": "19.1.1",
    "sort-package-json": "^3.0.0",
    "tsup": "^8.5.0",
    "typescript": "5.8.2"
  },
  "peerDependencies": {
    "react": ">=19",
    "react-dom": ">=19"
  },
  "packageManager": "pnpm@10.11.0",
  "engines": {
    "node": ">=20"
  },
  "publishConfig": {
    "access": "public"
  }
}
